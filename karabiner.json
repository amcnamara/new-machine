{
  "profiles": [
    {
      "name": "Kitty & Browser Overrides",
      "selected": true,
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" },
      "complex_modifications": {
        "title": "Kitty modifier overrides.",
        "rules": [
          {
            "description": "Override command keys with control/meta.",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "left_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "left_control" }],
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^net.kovidgoyal.kitty$"
                    ],
                    "file_paths": ["^/Applications/kitty.app/Contents/MacOS/kitty$"],
                    "type": "frontmost_application_if"
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "right_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "left_option" }],
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^net.kovidgoyal.kitty$"
                    ],
                    "file_paths": ["^/Applications/kitty.app/Contents/MacOS/kitty$"],
                    "type": "frontmost_application_if"
                  }
                ]
              }
            ]
          },
          {
            "description": "Chrome/Brave redirect cmd+shift+c away from devtools. C maps to I thanks to Dvorak layout.",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "i",
                  "modifiers": { "mandatory": ["command", "shift"] }
                },
                "to": [
                  {
                    "key_code": "i",
                    "modifiers": ["command"]
                  }
                ],
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com.google.Chrome$",
                      "^com.brave.Browser$"
                    ],
                    "file_paths": [
                      "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
                      "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
                    ],
                    "type": "frontmost_application_if"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
